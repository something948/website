  <h1>IP Grabber</h1>

  <?php
    // Check if the form has been submitted
    if (isset($_POST['send'])) {
      // Retrieve the user's IP address using the `$_SERVER` superglobal
      $userIP = $_SERVER['REMOTE_ADDR'];

      // Use the `mail` function to send an email to nightminer64@gmail.com
      // with the user's IP address in the body of the email
      mail('william.alwell@andoverregional.org', 'IP Address', "The user's IP address is: $userIP");
    }
  ?>

  <form method="post">
    <input type="submit" name="send" value="Send Email">
  </form>
